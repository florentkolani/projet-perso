@model IEnumerable<Projet_Kolani.Models.Facture>

@{
    ViewData["Title"] = "Index";
}

<h1>Page de Facturation</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Facture</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontantTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proprietaire)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontantTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proprietaire.ProprietaireId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FactureId" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FactureId" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FactureId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
